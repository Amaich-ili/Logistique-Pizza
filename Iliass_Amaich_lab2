# Iliass Amaich

class Pizza:
    PI = 3.1416

    def __init__(self, rayon = 0.0, diametre = 0.0, cout = 0.0) -> None:
        self.rayon = rayon
        self.diametre = diametre
        self.cout = cout
    
    #Creer des objets
    def creerpizza(self):
        diametre = int(input("Entrer le diametre on pouces de ton pizza : "))
        cout = int(input("Entrer le cout de ton pizza : "))
        rayon = diametre / 2
        return [rayon, diametre, cout]

    # lister les attributs
    def liste_attributs(self):
        return [self.rayon, self.diametre, self.cout]

    #Calculer l'aire de pizza
    def airpizza(self):
        return Pizza.PI * (self.rayon)**2
        
    #Afficher info class
    def __str__(self):
        return (f"Pizza : {(self.diametre)}'' -> {(self.cout)} $")


class Boite:

    def __init__(self, longueur = 0.0, largeur = 0.0) -> None:
        self.longueur = longueur
        self.largeur = largeur

    #Creer des objets
    def creerboite():
        longueur = float(input("Entrer la longueur on centimetre de la boite : "))
        largeur = float(input("Entrer la largeur on centimetre de la boite : "))
        return [longueur, largeur]

    #Calculer aire boite
    def airboite(self):
        return self.longueur * self.largeur
    
    #Afficher info class
    def __str__(self):
        return (f"Boite : {self.airboite()} cm")


# Menu principal
def menu():
    pizza = Pizza()
    boite = Boite()
    # instancier liste des pizzas
    liste_pizza = []
    # instancier liste des boites
    liste_boite = []
    condition = True
    while condition:
        choix = input("\n[1] Créer une nouvelle pizza \n[2] Créer une nouvelle boîte \n[3] Voir la liste de pizzas \n[4] Voir la liste de boîtes \n[5] Comparer spécial 2 pour 1 \n[6] Mettre une pizza dans une boîte\nVotre choix : \n")
        
        if choix == "1" :
            attribut_pizza = pizza.creerpizza()
            liste_pizza.append(Pizza(attribut_pizza[0], attribut_pizza[1], attribut_pizza[2]))

        elif choix == "2" :
            attribut_boite = boite.creerboite()
            liste_boite.append(Boite(attribut_boite[0], attribut_boite[1]))

        elif choix == "3" :
            for pizza in liste_pizza:
                print(pizza)

        elif choix == "4" :
            for boite in liste_boite:
                print(boite)

        elif choix == "5" :

             # Afficher la liste des pizzas
            print("\nVoici les pizzas disponibles ")
            for index, value in enumerate(liste_pizza):
                print(f"\t{index + 1}.  {value}")
            
            # Demander a li'utilisateur de choisir un pizza
            pizza_choix = int(input("\nQuel pizza vous voulez ? "))
            pizza_choisi = liste_pizza[pizza_choix-1]
            aire1 = pizza_choisi.airpizza()*2
            
            # Demander a l'utilisateur de choisir un prix
            prix = int(input("Entrer un prix parmi la liste : "))

            # Afficher la nouvelle liste des pizzas depend du prix choisi
            liste_nv = []
            for i in liste_pizza:
                if i.cout == prix :
                    liste_nv.append(i)
            for element in liste_nv:
                print(element)

            # Demander a l'utilisateur de choisir un pizza
            nv_choix = int(input("\nQuel pizza vous voulez ? "))
            pizza_special = liste_nv[nv_choix-1]
            aire2 = pizza_special.airpizza()
            
            #comparer_aire()
            if aire1 > aire2:
                print("Vous n'avez pas pris la bonne décision!")
            else:
                print("Vous avez fait un bon choix !!")
            
        elif choix == "6" :

             print("\nVoici les pizzas disponibles ")
            # Afficher la liste des pizzas
            for index, value in enumerate(liste_pizza):
                print(f"\t{index + 1}.  {value}")

            print("\nVoici les boites disponibles ")
            # Afficher la liste des boites
            for index, value in enumerate(liste_boite):
                print(f"\t{index + 1}.  {value}")

            # Demander a l'utilisateur de choisir un pizza et une boite
            pizza_choisi = int(input("\nChoisisez un pizza : "))
            boite_choisi = int(input("Choisisez une boite : "))

            # Reperer le pizza et la boite dans la liste
            pizza_embaler = liste_pizza[pizza_choisi-1]
            boite_embaler = liste_boite[boite_choisi-1]
            # print(boite_embaler.largeur)
            # print((pizza_embaler.rayon)*2.54)

            if ((pizza_embaler.rayon)* 2.54) < boite_embaler.largeur:
                print("On peut emballer votre pizza ")
            else:
                print("Désolé ! On ne peut pas emballer votre pizza ")

        else:
            condition = False
menu()
        
